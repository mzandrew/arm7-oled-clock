ENTRY(reset_vector)

MEMORY {
/*	flash (rx) : ORIGIN = 0x100000, LENGTH = 0x10000 */
/*	flash (rx) : ORIGIN = 0x102000, LENGTH = 0xe000 */
/*	sram (w) : ORIGIN = 0x202000, LENGTH = 0x2000 */
	sram (wx) : ORIGIN = 0x202000, LENGTH = 0x2000
/*	sram (wx) : ORIGIN = 0x200000, LENGTH = 0x4000 */
}

SECTIONS {
	.text : { *(.glue_7) *(.glue_7t) _etext = .; } >sram
	.text : { _etext = .; } >sram
	.data : { _data = .; _edata = .; } >sram
	.bss : { _bss_start = .; } >sram
/*	.text : { _etext = .; } >flash */
/*	.data : { _data = .; _edata = .; } >flash */
/*	.bss : { _bss_start = .; } >sram */
	_bss_end = .;
}

